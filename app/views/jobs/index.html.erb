<div class="border-form margin-bottom">
  <%= search_form_for @query do |f| %>
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Status:</label>
        <%= f.search_field :status_cont, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Customer:</label>
        <%= f.search_field :customer_business_name_cont, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">User:</label>
        <%= f.search_field :user, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Start:</label>
        <input type="text" class="form-control datepicker" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">End:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary filter-button ">Search</button>
    </div>
  </div>
  <% end %>
</div>

<strong>Quick select:</strong> <a href="#"><%= current_user.first_name %> next 14 days</a> | <a href="#"><%= current_user.first_name %> completed last 14 days</a> | <a href="#">All allocated not completed</a> | <a href="#">All not allocated</a>
<br>
<br>


<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Jobs</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_job_path %>">New</a>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Customer</th>
      <th>User</th>
      <th>Scheduled date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.customer.business_name %></td>
        <td><%= job.user&.first_name %> <%= job.user&.last_name %></td>
        <td><%= job.scheduled_date %></td>
        <td><%= job.status %></td>
        <td></td>
        <td> <a href="#">Job report</a> </td>
        <td><%= link_to 'Show', job %> | <%= link_to 'Edit', edit_job_path(job) %> | <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
