<%= simple_form_for @job do |f| %>
  <%= f.error_notification %>
  <h5 class="subheading-form">Details:</h5>
  <div class="form-inputs">
    <div class="row">
      <div class="col-md-4">
        <%= f.association :customer, collection: Customer.order(:business_name).pluck(:business_name, :id), prompt: "Choose a customer" %>
      </div>
      <div class="col-md-4">
        <%= f.association :user, collection: User.order(:first_name).pluck(:first_name, :id), prompt: "Choose a user"  %>
      </div>
      <div class="col-md-4">
        <%= f.input :status, collection: ['Allocated', 'Completed'] %>
      </div>
      <div class="col-md-4">
        <%= f.input :completed_date, input_html: { class: 'datepicker' } %>
      </div>
      <div class="col-md-4">
        <%= f.input :scheduled_date %>
      </div>
    </div>
    <%= f.input :title %>
    <%= f.input :description, :as => :text, :input_html => {:rows => 5} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-outline-primary" %>
  </div>
  <br>
<% end %>
