<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <img class="img-circle" src="<%= current_user.avatar %>"  alt="profile">
      </div>
      <div class="pull-left info">
        <p><%= current_user.first_name %> <%= current_user.last_name %></p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
  <hr>
    <ul class="sidebar-menu" data-widget="tree">
      <li>
        <a href="<%= app_dashboards_path %>">
          <i class="fa fa-laptop"></i> <span> Dashboard</span>
        </a>
      </li>
      <% if can?(:manage, User)%>
        <li class="nav-item">
          <a class="nav-link" href="<%= admin_users_path %>">
            <i class="fa fa-user"></i> Users
          </a>
        </li>
      <% end %>
      <li class="nav-item">
        <a class="nav-link" href="<%= app_customers_path %>">
          <i class="fa fa-user"></i> Customers
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= app_jobs_path %>">
          <i class="fa fa-file"></i> Jobs
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= app_job_reports_path %>">
          <i class="fa fa-signal"></i> Job reports
        </a>
      </li>
      <li>
        <a href="<%= profile_app_users_path %>">
          <i class="fa fa-cog"></i> <span> Settings</span>
        </a>
      </li>
    </ul>
  </section>
</aside>
