<div class="border-form margin-bottom">
  <div class="row">
    <div class="col-md-12">
      <form>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search">
          <div class="input-group-btn">
            <button type="button" class="btn btn-primary">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1Customers</h1>
  </div>
</div>

<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Customers</h3>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Business name</th>
          <th>Phone</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.business_name %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.email %></td>
            <td><%= link_to 'Show', app_customer_path(customer) %></td>
            <td><%= link_to 'Edit', edit_app_customer_path(customer) %></td>
            <td><%= link_to 'Destroy', app_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
