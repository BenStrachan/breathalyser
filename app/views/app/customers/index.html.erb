<div class="box">
  <div class="box-body">
    <%= search_form_for @query, url: app_customers_path do |f| %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-11">
              <%= f.search_field :business_name_cont, class: 'form-control', placeholder: 'Search ..' %>
            </div>
            <div class="col-md-1">
              <button type="submit" class="btn btn-default">Search</button>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>



<div class="box">
  <div class="box-header">
  <h3 class="box-title">Customers</h3>
    <div class="box-tools">
      <ul class="pull-right">
        <a href="<%= new_app_customer_path %>" class="btn btn-block btn-default btn-sm">New customer</a>
      </ul>
    </div>
  </div>
  <div class="box-body">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Business name</th>
          <th>Phone</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.business_name %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.email %></td>
            <td><%= link_to 'Show', app_customer_path(customer) %></td>
            <td><%= link_to 'Edit', edit_app_customer_path(customer) %></td>
            <td><%= link_to 'Destroy', app_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
