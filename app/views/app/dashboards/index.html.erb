
<div class="row">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Completed jobs without invoice number</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Customer</th>
              <th>User</th>
              <th>Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @job_without_invoice.each do |job| %>
              <tr>
                <td><a href="<%= app_job_path(job) %>">#<%= job.id %></a></td>
                <td><a href="<%= app_customer_path(job.customer) %>"><%= job.customer&.business_name %></a></td>
                <td>
                  <a href="#"><%= job.user&.full_name %></a>
                </td>
                <td><%= job.completed_date.try(:strftime, "%d %b, %Y") %></td>
                <td><a href="<%= edit_app_job_path(job) %>"><i class="fa fa-pencil"></i> Edit</a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Completed jobs without certificate sent</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Customer</th>
              <th>User</th>
              <th>Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @jobs_without_certificate.each do |report| %>
              <tr>
                <td><a href="<%= app_job_path(report.job) %>">#<%= report.job.id %></a></td>
                <td><a href="<%= app_customer_path(report.job.customer) %>"><%= report.job.customer&.business_name %></a></td>
                <td>
                  <a href="#"><%= report.job.user&.full_name %></a>
                </td>
                <td><%= report.job.completed_date.try(:strftime, "%d %b, %Y") %></td>
                <td>
                  <a href="<%= certificate_app_job_report_path(report) %>" data-method="POST">
                    <i class="fa fa-inbox"></i> Certificate</a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="box">
      <div class="box-header with-border">
        <h3 class="box-title">Completed jobs without job report</h3>
      </div>
      <div class="box-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th>Customer</th>
