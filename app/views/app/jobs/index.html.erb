<div class="border-form margin-bottom">
  <%= search_form_for @query, url: app_jobs_path do |f| %>
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Status:</label>
        <%= f.search_field :status_cont, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Customer:</label>
        <%= f.search_field :customer_business_name_cont, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">User:</label>
        <%= f.search_field :user, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Start:</label>
        <input type="text" class="form-control datepicker" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">End:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <label style="display: block;">&nbsp;</label>
      <button type="submit" class="btn btn-primary filter-button ">Search</button>
    </div>
  </div>
  <% end %>
</div>

<strong>Quick select:</strong> <a href="#"><%= current_user.first_name %> next 14 days</a> | <a href="#"><%= current_user.first_name %> completed last 14 days</a> | <a href="#">All allocated not completed</a> | <a href="#">All not allocated</a>
