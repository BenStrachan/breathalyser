<div class="box">
  <div class="box-header with-border">
      <h3 class="box-title">Job report details:</h3>
  </div>
  <div class="box-body">
    <p>
      <strong>Job:</strong>
      <%= @job_report.job.id %>
    </p>

    <p>
      <strong>Customer:</strong>
      <%= @job_report.customer.business_name %>
    </p>

    <p>
      <strong>User:</strong>
      <%= @job_report.user&.first_name %>
    </p>

    <p>
      <strong>Serial number:</strong>
      <%= @job_report.serial_number %>
    </p>

    <p>
      <strong>Service date:</strong>
      <%= @job_report.service_date %>
    </p>

    <p>
      <strong>Previous date:</strong>
      <%= @job_report.previous_date %>
    </p>

    <p>
      <strong>Clean air:</strong>
      <%= @job_report.clean_air %>
    </p>

    <p>
      <strong>Manual gas:</strong>
      <%= @job_report.manual_gas %>
    </p>

    <p>
      <strong>Gas level:</strong>
      <%= @job_report.gas_level %>
    </p>

    <p>
      <strong>Total count:</strong>
      <%= @job_report.total_count %>
    </p>

    <p>
      <strong>Download:</strong>
      <%= @job_report.download %>
    </p>

    <p>
      <strong>Raw reading:</strong>
      <%= @job_report.raw_reading %>
    </p>

    <% if @job_report.attachment.exists? %>
    <p>
      <strong>Attachment:</strong>
      <a href="<%= @job_report.attachment.url %>" target="_blank">
        Download
      </a>
    </p>
    <% end %>

    <p>
      <strong>Comment:</strong>
      <%= @job_report.comment %>
    </p>

    <p>
      <strong>Job ID:</strong>
      <%= @job_report.job_id %>
    </p>

    <p>
      <strong>User ID:</strong>
      <%= @job_report.user_id %>
    </p>

    <p>
      <strong>Manual gas 2:</strong>
      <%= @job_report.manual_gas_two %>
    </p>

    <p>
      <strong>Manual gas final:</strong>
      <%= @job_report.manual_gas_final %>
    </p>

    <p>
      <strong>Calibration factor:</strong>
      <%= @job_report.calibration_factor %>
    </p>

    <p>
      <strong>Gas replaced:</strong>
      <%= @job_report.gas_replaced %>
    </p>

    <p>
      <strong>Consumables invoice number:</strong>
      <%= @job_report.consumables_invoice_number %>
    </p>

    <p>
      <strong>Calibration successful:</strong>
      <%= @job_report.calibration_successful %>
    </p>

  </div>
</div>
