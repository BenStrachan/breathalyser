<div class="row">
  <div class="col-md-6 col-sm-6 col-6">
    <h1>Job Reports</h1>
  </div>
  <div class="col-md-6 col-sm-6 col-6 text-right">
    <a class="btn btn-outline-primary" href="<%= new_app_job_report_path %>">New</a>
  </div>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Job</th>
      <th>Customer</th>
      <th>User</th>
      <th>Service date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_reports.each do |job_report| %>
      <tr>
        <td><%= job_report.job&.id %></td>
        <td><%= job_report.customer.business_name %></td>
        <td><%= job_report.user.first_name %></td>
        <td><%= job_report.service_date %></td>
        <td></td>
        <td> <a href="#">Send Certificate</a> </td>
        <td><%= link_to 'Show', app_job_report_path(job_report) %> | <%= link_to 'Edit', edit_app_job_report_path(job_report) %> | <%= link_to 'Destroy', app_job_report_path(job_report), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
