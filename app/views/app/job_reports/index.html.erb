<div class="border-form margin-bottom">
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Certificate:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Customer:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">User:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">Start:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <label for="usr">End:</label>
        <input type="text" class="form-control" id="usr">
      </div>
    </div>
    <div class="col-md-2">
      <button type="button" class="btn btn-primary filter-button">Search</button>
    </div>
  </div>
</div>

<strong>Quick select:</strong> <a href="#"><%= current_user.first_name %> job reports</a> | <a href="#">Certificate not sent</a> | <a href="#">All users job reports</a>
